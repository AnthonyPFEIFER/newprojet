{% extends "base.html.twig" %}

{% block body %}

	{% for user in users %}
		<h2>
			{{ user.username }}
		</h2>
		<h4>
			{{ user.firstname }}
		</h4>
		<h4>
			{{ user.lastname }}
		</h4>
		<h4>
			{{ user.createdAt|date('Y-m-d H:i:s') }}
		</h4>
		<p>
			{% for post in user.post %}
				<p>
					{{ post.title }}
					<a href="{{ path("posts-user", {'id': post.id} ) }}"></a>
				</p>

			{% endfor %}
		</p>
	{% endfor %}


	<table class="table utilisateurs">
		<thead>
			<tr>
				<th scope="col">ID</th>
				<th scope="col">Username</th>
				<th scope="col">Firstname</th>
				<th scope="col">Lastname</th>
				<th scope="col">Created_at</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<th scope="row">
						{{ user.id }}
					</th>
					<td>
						{{ user.username }}
					</td>
					<td>
						{{ user.firstname }}
					</td>
					<td>
						{{ user.lastname }}
					</td>
					<td>
						{{ user.createdAt|date('Y-m-d H:i:s') }}
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
